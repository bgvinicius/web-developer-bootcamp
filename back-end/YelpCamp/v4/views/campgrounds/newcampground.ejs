<% include ../partials/header %>

<div class="container" style="width: 30%">
    <h1 class="text-center" style="margin-bottom: 25px">Create A New Campground</h1>
    <form method="POST" action="/campgrounds">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Name" name="campgroundName">
        </div>

        <div class="form-group">
            <input type="text" class="form-control" placeholder="Image Url" name="campgroundUrl">
        </div>

        <div class="form-group">
                <input type="text" class="form-control" placeholder="Campground Description" name="desc">
            </div>
    
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
    </form>
</div>

