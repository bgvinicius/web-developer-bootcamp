<% include ../partials/header %>

<div class="container" style="width: 30%">
    <h1 class="text-center" style="margin-bottom: 25px">Add New Comment to <%=campground.name%> </h1>
    <form method="POST" action="/campgrounds/<%=campground._id%>/comments">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Name" name="author">
        </div>

        <div class="form-group">
            <input type="text" class="form-control" placeholder="Commentary" name="text">
        </div>
    
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
    </form>
</div>

<% include ../partials/footer %>